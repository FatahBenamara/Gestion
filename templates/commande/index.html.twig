{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero client</th>
                <th>Client</th>
                <th>Date Commande</th>
                <th>Observation</th>
                <th>Total Ht</th>
                <th>Total Tva</th>
                <th>Total TTC</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.numc }}</td>
                <td>{{ commande.client.libelle }}</td>
                <td>{{ commande.datecomm ? commande.datecomm|date('Y-m-d') : '' }}</td>
                <td>{{ commande.observation }}</td>
                <td>{{ commande.totht }}</td>
                <td>{{ commande.tottva }}</td>
                <td>{{ commande.totttc }}</td>
                <td>
                    <a href="{{ path('commande_show', {'id': commande.id}) }}">show</a>
                </td>
                <td>
                    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>
                </td>             
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <td>
        <a href="{{ path('commande_new') }}">new</a>
    </td>
{% endblock %}
