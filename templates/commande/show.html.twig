{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Numero client</th>
                <td>{{ commande.numc }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ commande.client.libelle }}</td>
            </tr>
            <tr>
                <th>Date Commande</th>
                <td>{{ commande.datecomm ? commande.datecomm|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ commande.observation }}</td>
            </tr>
            <tr>
                <th>Total Ht</th>
                <td>{{ commande.totht }}</td>
            </tr>
            <tr>
                <th>Total Tva</th>
                <td>{{ commande.tottva }}</td>
            </tr>
            <tr>
                <th>Total TTC</th>
                <td>{{ commande.totttc }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commande_index') }}">back to list</a>

    <a href="{{ path('commande_edit', {'id': commande.id}) }}">edit</a>

    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
